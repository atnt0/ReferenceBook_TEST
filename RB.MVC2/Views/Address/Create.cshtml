@model RB.DAL.Models.Addresses
@*<h1>Create</h1>*@

@*<h4>Addresses</h4>*@

@*<hr />*@

@*<div class="row">
    <div class="col-12">*@
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="AddressId" />
    <div class="item_address">
        <div class="row">
            <div class="col-6">City:</div>
            <div class="col-6">
                <div class="form-group">
                    @Html.DropDownList("CityId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CityId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="item_address">
        <div class="row">
            <div class="col-6">Zip Code:</div>
            <div class="col-6">
                <div class="form-group">
                    @Html.DropDownList("ZipCodeId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ZipCodeId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="item_address">
        <div class="row">
            <div class="col-6">Street:</div>
            <div class="col-6">
                <div class="form-group">
                    @Html.DropDownList("StreetId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.StreetId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="item_address">
        <div class="row">
            <div class="col-6">House:</div>
            <div class="col-6">
                <div class="form-group">
                    <input asp-for="House" class="form-control" />
                    <span asp-validation-for="House" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="item_address">
        <div class="row">
            <div class="col-6">Block:</div>
            <div class="col-6">
                <div class="form-group">
                    <input asp-for="Block" class="form-control" />
                    <span asp-validation-for="Block" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="item_address">
        <div class="row">
            <div class="col-6">Apartment:</div>
            <div class="col-6">
                <div class="form-group">
                    <input asp-for="Apartment" class="form-control" />
                    <span asp-validation-for="Apartment" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="item_address">
        <div class="row">
            <div class="col-6">Latitude:</div>
            <div class="col-6">
                <div class="form-group">
                    <input asp-for="Latitude" class="form-control" />
                    <span asp-validation-for="Latitude" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="item_address">
        <div class="row">
            <div class="col-6">Longitude:</div>
            <div class="col-6">
                <div class="form-group">
                    <input asp-for="Longitude" class="form-control" />
                    <span asp-validation-for="Longitude" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input id="loadSetedAddress" type="submit" value="Create" class="btn btn-sm btn-primary" />
    </div>

</form>

