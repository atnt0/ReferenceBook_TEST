@model IEnumerable<RB.DAL.Models.Companies>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @Html.ActionLink("Добавить", "Edit", "Company", new { id = 0 }, new { @class = "btn btn-sm btn-primary" })
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div id="tr-@item.CompanyId" class="col-4">
            <img src=" @(((Dictionary<Guid, String>)ViewBag.Photos)[item.CompanyId])" height="130" />
            <div class="font-weight-bold"> @item.CompanyName</div>
            @*<div>@item.FilmInfo</div>
            <div> Дата: @item.FilmDate.Year год</div>
            <p class="font-weight-bold">Жанр: </p>
            @foreach (var item2 in item.GenreFilm)
            {
                <p> @item2.Genre.GenreName</p>
            }
            <p class="font-weight-bold"> В ролях </p>
            @foreach (var item2 in item.ActFilm)
            {
                <p> @item2.Actor.ActorName </p>
            }
            <p class="font-weight-bold" id="rate-@item.FilmId">Рейтинг фильма: @item.Voting.Count(); </p>
            @if (ViewBag.role == true)
            {
                <a asp-action="Edit" asp-route-id="@item.FilmId" class="btn btn-sm btn-success">Edit</a>
                <a asp-action="Index" asp-controller="Actor" asp-route-id="@item.FilmId" class="btn  btn-sm btn-primary">Actors</a>
                <a asp-action="Index" asp-controller="Genre" asp-route-id="@item.FilmId" class="btn  btn-sm btn-primary">Genres</a>
                @Html.ActionLink("Удалить", "Delete", new { id = item.FilmId }, new { @class = "btn btn-sm btn-danger delete-Film", data_FilmId = item.FilmId })
                <a asp-action="Index" asp-controller="Photo" asp-route-id="@item.FilmId" class="btn  btn-sm btn-info">Photos</a>
            }
            @if (ViewBag.user == true)
            {
                @Html.ActionLink("Голосовать", "EditVote", new { id = item.FilmId }, new { @class = "btn btn-sm btn-primary vote", data_FilmId = item.FilmId })
            }
            <br>*@
        </div>
    }
</div>

